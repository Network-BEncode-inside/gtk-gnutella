;# $Id$

EXTRA_FILES = \
	extra_files/bogons.txt \
	extra_files/favicon.png \
	extra_files/gwcache.boot \
	extra_files/geo-ip.txt \
	extra_files/hostiles.txt \
	extra_files/robots.txt

PIXMAP_FILES = \
	extra_files/gtk-gnutella.png	\
	extra_files/gtk-gnutella.svg

DESKTOP_FILES = \
	extra_files/gtk-gnutella.desktop

all::		/* So that default target is not clobber! */

SetSubdirs(src pixmaps po)
DependDirs(src)
AddedByConfigure(install gtk-gnutella.spec)

INSTALLFLAGS = -m 444

MakeInstallDirectories($(PRIVLIB))
InstallMultiple($(EXTRA_FILES), $(PRIVLIB))
InstallMultiple($(DESKTOP_FILES), $(INSTALLPREFIX)/share/applications)
InstallMultiple($(PIXMAP_FILES), $(INSTALLPREFIX)/share/pixmaps)

;#
;# Update the bogons and GeoIp databases
;#

update:
	wget http://www.completewhois.com/bogons/data/bogons-cidr-all.txt \
		-O extra_files/bogons.txt
	rm -f GeoIPCountryCSV.zip
	wget http://www.maxmind.com/download/geoip/database/GeoIPCountryCSV.zip
	rm -f GeoIPCountryWhois.csv
	unzip GeoIPCountryCSV.zip
	scripts/geo-to-db.pl -c GeoIPCountryWhois.csv >extra_files/geo-ip.txt

